{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "out-tsc/spec",
    "types": ["jasmine", "node"],
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.spec.ts",
    "src/test.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "out-tsc/spec",
    "node_modules"
  ]
}
